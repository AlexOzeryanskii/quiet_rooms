DATABASE_URL=sqlite:///./quiet_rooms.db
# ОБЯЗАТЕЛЬНО замените на свой секрет в проде
SECRET_KEY=CHANGE_ME_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Лимит комнат на ноду по умолчанию
DEFAULT_NODE_MAX_ROOMS=3

# Демо-нода для локального запуска без внешних серверов
DEMO_NODE_ENABLED=true
DEMO_NODE_BASE_URL=http://127.0.0.1:9000

# YooKassa
YOOKASSA_SHOP_ID=YOUR_SHOP_ID
YOOKASSA_SECRET_KEY=YOUR_SECRET_KEY
YOOKASSA_WEBHOOK_URL=https://example.com/api/billing/yookassa/webhook

# Стоимость комнаты (руб)
ROOM_PRICE_RUB=1200

# Настройки для node_service (используются и фронтом в dev-сценарии)
CONTROL_PLANE_URL=http://127.0.0.1:8000
NODE_ID=<подставь id из /nodes>
NODE_API_KEY=node-local-key
HEARTBEAT_INTERVAL_SECONDS=10
